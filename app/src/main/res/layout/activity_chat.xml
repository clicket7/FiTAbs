<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/contact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <Button
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/delete"
        android:layout_marginRight="8dp"
        android:layout_above="@+id/chat"
        android:layout_alignParentEnd="true" />
    
    <ListView
        android:id="@+id/chat"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_weight="0.72"
        android:layout_below="@+id/contact"
        android:layout_alignParentStart="true"
        android:stackFromBottom="true"
        android:transcriptMode="alwaysScroll"
        android:layout_above="@+id/editMessage"/>
    <EditText
        android:id="@+id/editMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_marginBottom="11dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/send"
        android:layout_marginEnd="36dp" />
    <Button
        android:id="@+id/send"
        android:layout_width="@dimen/button_size_width"
        android:layout_height="@dimen/button_size_height"
        android:layout_weight="1"
        android:onClick="sendMsg"
        android:text="@string/send"
        android:textColor="#FFFFFF"
        android:background="#008000"
        android:layout_alignBaseline="@+id/editMessage"
        android:layout_alignBottom="@+id/editMessage"
        android:layout_alignEnd="@+id/deleteButton"
        android:layout_marginEnd="29dp" />

    <Button
        android:id="@+id/backToContacts"
        android:onClick="backToContacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        android:layout_above="@+id/chat"
        android:layout_alignParentStart="true" />

</RelativeLayout>