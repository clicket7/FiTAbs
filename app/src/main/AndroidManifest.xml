<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.student.fitabs">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--  android:roundIcon="@mipmap/ic_launcher_round" !-->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_weights"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".ContactsActivity" android:noHistory="true" android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".UserSettingsActivity" android:noHistory="true" android:screenOrientation="portrait"/>
        <activity android:name=".ChatActivity" android:noHistory="true" android:windowSoftInputMode="stateHidden" android:screenOrientation="portrait"/>
        <activity android:name=".MyCalendarActivity" android:noHistory="true" android:screenOrientation="portrait"/>
        <activity android:name=".AddContactActivity" android:noHistory="true" />
        <activity android:name=".UpdateContactsActivity" android:noHistory="true" />
        <activity android:name=".GroupsOfExercisesActivity" android:noHistory="true" />
        <activity android:name=".ExercisesActivity" android:noHistory="true" />
        <activity android:name=".ExerciseActivity" android:noHistory="true" />

    </application>

</manifest>